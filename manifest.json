{
  "name": "Page action by URL",
  "version": "1.0",
  "description": "Shows a page action for urls which have the letter 'g' in them.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action":  {
    "default_icon" : "icon-19.png",
    "default_title" : "There's a 'G' in this URL!"
  },
  "content_scripts": [{
    "matches": ["http://challonge.com/*/participants"],
    "js": ["challonge_sorter.js"]
  }],
  "permissions": [
    "declarativeContent",
    "http://challonge.com/*/participants"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
